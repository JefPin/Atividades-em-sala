#include <stdio.h>
#include <locale.h>
#include <string.h>

int main(){
	setlocale(LC_ALL,"portuguese");
	
	char disciplinas[3][200];
	float soma = 0.0, media[3], notas[3][3];
	int i,j;
	
	for(i=0;i<3;i++){
		printf("Digite a %dª Disciplina: ",i+1);
		scanf("%s",&disciplinas[i]);
		
		for(j=0;j<3;j++){
			printf("Digite sua %dª Nota: ",j+1);
			scanf("%f",&notas[i][j]);
			
			soma += notas[i][j];
		}
			
		media[i] = soma/j;
		soma = 0;
		printf("\n");
		
	}
	
	// Exibindo Dados. 
	
	// system(stdin);
	
	printf("\n=== Exibindo Dados ===\n\n");
	
	for(i=0;i<3;i++){
		printf("%dª Disciplina: %s \n",i+1,disciplinas[i]);
		
		for(j=0;j<3;j++){
			printf("%dª Nota: %f \n",j+1,notas[i][j]);
		}
		printf("Média: %.1f \n\n",media[i]);
		
	
		
		
		
		
	}
	
	
	return 0;
	
}
